@model RegisterViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Register</h2>
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmedPasswored" class="form-label"></label>
                    <input asp-for="ConfirmedPasswored" class="form-control" />
                    <span asp-validation-for="ConfirmedPasswored" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <div class="form-check">
                        <input asp-for="IsMale" class="form-check-input" type="radio" value="true" id="genderMale" />
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsMale" class="form-check-input" type="radio" value="false" id="genderFemale" />
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                    <span asp-validation-for="IsMale" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountBio" class="form-label"></label>
                    <textarea asp-for="AccountBio" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="AccountBio" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

